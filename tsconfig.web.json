{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ESNext", "Dom", "DOM.Iterable"],
    "types": ["vite/client"],
    "typeRoots": ["./node_modules", "./typings"],
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "packages/qionglou/*",
    "typings/vue-shim.d.ts",
    "typings/vue-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "**/*.md"
  ]
}
